<h1 class="header">Login</h1>

<% if error_message %>
  <div class="error">
  <%= error_message %>
  </div>
<% end %>

<table class="form_display">
  <form action="/login" method="post">
    <tr>
      <td>Email</td>
      <td><input class="textbox" type="text" name="email"></td>
    </tr>
    <tr>
      <td>Password</td>
      <td><input class="textbox" type="password" name="user_password"></td>
    </tr>
    <tr>
      <td></td>
      <td><input class="button" type="submit" value="Login"></td>
    </tr>
  </form>
</table>


